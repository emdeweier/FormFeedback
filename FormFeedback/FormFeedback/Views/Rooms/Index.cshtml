@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Management Rooms";
}

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><button data-toggle="modal" data-target="#rooms-modal" class="btn btn-primary" onclick="rClearScreen();">Create New</button></h3>
        </div>
        <div class="card-body">
            <div class="table-responsive m-0">
                <table class="table table-striped table-bordered" id="rooms">
                    <thead>
                        <tr>
                            <th width="5%">No.</th>
                            <th>Room Name</th>
                            <th>Size</th>
                            <th>Floor</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rooms in ViewBag.Rooms)
                        {
                            <tr>
                                <td></td>
                                <td>@rooms.Name</td>
                                <td>@rooms.Size</td>
                                <td>@rooms.Floor</td>
                                <td><button class='btn btn-warning' onclick=rGetById("@rooms.Id");>Edit</button> <button class='btn btn-danger' onclick=rDelete("@rooms.Id");>Delete</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
            <div class="modal fade" id="rooms-modal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Rooms Form</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" class="form-control" id="rIdText" placeholder="Id" />
                            <div class="form-group">
                                <label for="Rooms">Rooms</label>
                                <input type="text" id="rValueText" class="form-control" placeholder="Rooms">
                            </div>
                            <div class="form-group">
                                <label for="Size">Size</label>
                                <input type="text" id="rSizeText" class="form-control" placeholder="Size">
                            </div>
                            <div class="form-group">
                                <label for="Floor">Floor</label>
                                <select style="width: 100%" id="rFloorText" name="Floor" class="form-control select2bs4">
                                    <option value="null">- Select Floor -</option>
                                    <option value="18">18</option>
                                    <option value="37">37</option>
                                    <option value="38">38</option>
                                    <option value="40">40</option>
                                    <option value="42">42</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="rSave" onclick="rValidation();">Submit</button>
                            <button type="button" class="btn btn-primary" id="rUpdate" onclick="rValidation();">Update</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

@section Scripts{
    <!-- jQuery -->
    <script src="~/js/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/js/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- DataTables -->
    <script src="~/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/js/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- Select2 -->
    <script src="~/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/js/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins/raphael/raphael.min.js"></script>
    <script src="~/js/plugins/morrisjs/morris.js"></script>
    <!-- ChartJS -->
    <script src="~/js/plugins/chart.js/Chart.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/js/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/js/demo.js"></script>
    <!-- Custom scripts -->
    <script src="~/js/ff/rooms.js"></script>
}

