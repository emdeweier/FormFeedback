
@{
    ViewData["Title"] = "Dashboard";
}

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Rooms Chart</h3>
                </div>
                <div class="card-body">
                    <div id="rooms-chart"></div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6"><h3 class="card-title">Room Event Chart</h3></div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <select style="width: 100%" id="rMonth" name="Type" class="form-control select2bs4">
                                        <option value="null">Select Month</option>
                                        <option value="Choice">Choice</option>
                                        <option value="Essay">Essay</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <select style="width: 100%" id="rYears" name="Type" class="form-control select2bs4">
                                        <option value="null">Select Years</option>
                                        <option value="Choice">Choice</option>
                                        <option value="Essay">Essay</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="rooms-event-chart"></div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

@section Scripts{
    <!-- jQuery -->
    <script src="~/js/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/js/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- DataTables -->
    <script src="~/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/js/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- Select2 -->
    <script src="~/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
        $('#rMonth').select2({
            theme: 'bootstrap4'
        })
        $('#rYears').select2({
            theme: 'bootstrap4'
        })
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/js/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins/raphael/raphael.min.js"></script>
    <script src="~/js/plugins/morrisjs/morris.js"></script>
    <!-- ChartJS -->
    <script src="~/js/plugins/chart.js/Chart.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/js/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/js/demo.js"></script>
    <script src="~/js/ff/dashboard.js"></script>
}

